{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=AdventureWorks2022;Trusted_Connection=True;TrustServerCertificate=True"
  },
    "PublicBaseUrl": "http://localhost:5100",
    "PdfCallbackUrl": "http://localhost:5053/api/Orders/GeneratePdf",
    "DefaultDelayMinutes": 5,
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Hangfire": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "Serilog": {
        "MinimumLevel": "Information",
        "WriteTo": [
            { "Name": "Console" },
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/app-.log",
                    "rollingInterval": "Day"
                }
            }
        ]
    }

}
